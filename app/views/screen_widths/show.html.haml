- model_class = ScreenWidth
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:size) + ':'
  %br
  = @screen_width.size


= link_to t('.back', :default => t("helpers.links.back")), screen_widths_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_screen_width_path(@screen_width), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), screen_width_path(@screen_width), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

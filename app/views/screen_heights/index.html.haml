- model_class = ScreenHeight
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:size)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @screen_heights.each do |screen_height|
      %tr
        %td= link_to screen_height.id, screen_height_path(screen_height)
        %td= screen_height.size
        %td=l screen_height.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_screen_height_path(screen_height), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), screen_height_path(screen_height), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_screen_height_path, :class => 'btn btn-primary'

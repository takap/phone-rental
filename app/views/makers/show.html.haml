- model_class = Maker
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @maker.name
%p
  %strong= model_class.human_attribute_name(:name_kana) + ':'
  %br
  = @maker.name_kana


= link_to t('.back', :default => t("helpers.links.back")), makers_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_maker_path(@maker), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), maker_path(@maker), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

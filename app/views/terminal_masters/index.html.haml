- model_class = TerminalMaster
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:carrier_id)
      %th= model_class.human_attribute_name(:maker_id)
      %th= model_class.human_attribute_name(:group_id)
      %th= model_class.human_attribute_name(:model_name)
      %th= model_class.human_attribute_name(:default_os)
      %th= model_class.human_attribute_name(:screen_inch)
      %th= model_class.human_attribute_name(:screen_width)
      %th= model_class.human_attribute_name(:screen_height)
      %th= model_class.human_attribute_name(:screen_density_id)
      %th= model_class.human_attribute_name(:release_date)
      %th= model_class.human_attribute_name(:tablet)
      %th= model_class.human_attribute_name(:nfc)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @terminal_masters.each do |terminal_master|
      %tr
        %td= link_to terminal_master.id, terminal_master_path(terminal_master)
        %td= terminal_master.carrier.name
        %td= terminal_master.maker.name
        %td= terminal_master.group.name
        %td= terminal_master.model_name
        %td= terminal_master.default_os
        %td= terminal_master.screen_inch
        %td= terminal_master.screen_width
        %td= terminal_master.screen_height
        %td= terminal_master.screen_density.size
        %td= terminal_master.release_date
        %td= terminal_master.tablet
        %td= terminal_master.nfc
        %td=l terminal_master.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_terminal_master_path(terminal_master), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), terminal_master_path(terminal_master), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_terminal_master_path, :class => 'btn btn-primary'

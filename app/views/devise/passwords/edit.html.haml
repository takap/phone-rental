.page-header
  %h1
    = t('.title')
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: tt('User.password'), required: true, autofocus: true
    = f.input :password_confirmation, label: tt('User.password_confirmation'), required: true
  .form-actions.col-sm-offset-2
    = f.button :submit, t('view.devise_change_password'), class: 'btn btn-primary'

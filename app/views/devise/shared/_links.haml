- if controller_name != 'sessions'
  = link_to t('view.login'), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('view.signup'), new_registration_path(resource_name), class: 'btn btn-default btn-block'
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('view.new_password'), new_password_path(resource_name), class: 'btn btn-default btn-block'
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('view.resend_confirm_mail'), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('view.resend_unlock_mail'), new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "#{provider.to_s.titleize} #{t('view.sign_in_with')}", omniauth_authorize_path(resource_name, provider)
    %br/

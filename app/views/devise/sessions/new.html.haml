.container
  %h2 Sign in
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f|
    %h2.form-signin-heading Please sign in
    .form-inputs
      = f.email_field :email, autofocus: "", placeholder: "Email address", required: false, autofocus: true, class: 'form-control'
      = f.password_field :password, placeholder: "Password", required: false, class: 'form-control'
      %label.checkbox
        = f.check_box :remember_me, value: "remember-me", as: :boolean if devise_mapping.rememberable?
        Remember me
    .form-actions
      = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
  = render "devise/shared/links"

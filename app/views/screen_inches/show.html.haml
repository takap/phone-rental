- model_class = ScreenInch
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:size) + ':'
  %br
  = @screen_inch.size


= link_to t('.back', :default => t("helpers.links.back")), screen_inches_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_screen_inch_path(@screen_inch), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), screen_inch_path(@screen_inch), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

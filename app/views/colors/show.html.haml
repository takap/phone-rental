- model_class = Color
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @color.name
%p
  %strong= model_class.human_attribute_name(:hex) + ':'
  %br
  = @color.hex


= link_to t('.back', :default => t("helpers.links.back")), colors_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_color_path(@color), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), color_path(@color), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
